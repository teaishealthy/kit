---
import { SplitPDF } from "@/components/pdf/split";
import HeaderLayout from "@/layouts/header-layout.astro";
---

<HeaderLayout
  title="Split PDFs"
  description="Split a PDF file into multiple files."
  icon="Split"
>
  <SplitPDF client:load />
</HeaderLayout>

<style>
  @reference "tailwindcss";
  .card {
    @apply cursor-pointer transition-all duration-200 ease-in-out hover:scale-102;
  }
  .modules {
    @apply container grid grid-cols-[repeat(2, 17vh)] gap-2 grid-rows-[repeat(2, 17vh)];
  }
</style>
