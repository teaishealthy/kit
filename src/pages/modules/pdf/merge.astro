---
import Layout from "@/layouts/layout.astro";
import { MergePDF } from "@/components/pdf/merge";
---

<Layout title="Merge PDFs" description="my personal swiss army knife">
  <MergePDF client:load />
</Layout>

<style>
  @reference "tailwindcss";
  .card {
    @apply cursor-pointer transition-all duration-200 ease-in-out hover:scale-102;
  }
  .modules {
    @apply container grid grid-cols-[repeat(2, 17vh)] gap-2 grid-rows-[repeat(2, 17vh)];
  }
</style>
